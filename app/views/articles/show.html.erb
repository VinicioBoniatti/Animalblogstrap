<article class="blog-post">
  <h2 class="blog-post-title"><%=@article.title%></h2>
  <%# esta em help %>
  <p class="blog-post-meta">
    <%= render "article_detail", article: @article %>
  </p>
  <p><%= @article.body %></p>
  <%= link_to t('articles.show.edit'), edit_article_path(@article),      
          class: 'btn btn-primary' if policy(@article).update? %>
  <%= link_to t('articles.show.destroy'), article_path(@article), method: :delete, data: {confirm: t('articles.destroy.confirm')}, 
          class: 'btn btn-danger' if policy(@article).destroy? %>
  <%= link_to t('articles.show.back'), root_path, class: 'btn btn-secondary' %>
  <h2 class="mt-3"><%= t('articles.show.comments') %></h2>
  <%= render @article.comments %>
  <h2><%= t('articles.show.add_comment') %></h2>
  <% if policy(:comment).create?%>
    <%= render 'comments/form'%>
  <% else %>
    <%= t('articles.show.login_create_comment') %>
  <%end%>
</article>
